{
	"manifest_version": 2,
	"name": "Cotação BTC",
	"version": "1.0",
    "description": "Extenção para monitorar e mostrar o melhor preço para compra de Bitcoin!",
	
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	
	"background": {
		"page": "background.html"
	},
	
	"browser_action": {
		"default_icon": "images/icon128.png",
		"default_title": "Cotação BTC",
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"activeTab",
		"alarms",
		"tabs",
		"http://*/*",
        "https://*/*",
		"http://api.bitvalor.com/"
	]
}